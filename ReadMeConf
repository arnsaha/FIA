// Update Participant


function updateParticipantData( data){	
const participantStoreRef =firestore.collection('fidelity_participant').doc(fidelity_participant.uid);

return participantStoreRef
	.get()
	.then(doc => {
		if (!doc.exists) {
			participantStoreRef.set(data);
		} else {
			participantStoreRef.update(data);
		}
	})
	.catch(err => {
		console.log(`[LOGIN] ${err}`);
	});
}
		
